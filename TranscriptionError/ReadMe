bwa aln  -t 10  $4 ./${1}_2.fastq > ${1}.2.sai.bwa
bwa sampe $4 ${1}.1.sai.bwa ${1}.2.sai.bwa  ./${1}_1.fastq ./${1}_2.fastq  > ${1}.sam  
rm *.fastq &
perl /Dell/Dell13/shankj/projects/Cov/TranscriptionError/bin/SE_Mismatch.pl ${1}.sam ${1}.Mismatch.sam 
perl /Dell/Dell13/shankj/projects/Cov/TranscriptionError/bin/PE_Overlap.pl ${1}.Mismatch.sam > ${1}.PE.overlap.Mismatch.sam
perl /Dell/Dell13/shankj/projects/Cov/TranscriptionError/bin/SE_Match2.pl   ${1}.sam ${1}.Match.sam  
perl /Dell/Dell13/shankj/projects/Cov/TranscriptionError/bin/PE_Overlap.pl ${1}.Match.sam > ${1}.PE.overlap.Match.sam 
samtools sort -@ 5 ${1}.PE.overlap.Mismatch.sam -o ${1}.PE.overlap.Mismatch.bam  
samtools mpileup -q 30 ${1}.PE.overlap.Mismatch.bam  -C 50 -Q 30 --max-depth  0 --output-BP --output-QNAME  --reference $2 -o ${1}.PE.overlap.Mismatch.mpileup  
samtools sort -@ 5 ${1}.PE.overlap.Match.sam -o ${1}.PE.overlap.Match.bam  
samtools mpileup -q 30 ${1}.PE.overlap.Match.bam  -C 50 -Q 30 --max-depth  0 --output-BP --output-QNAME  --reference $2 -o ${1}.PE.overlap.Match.mpileup  
perl /Dell/Dell13/shankj/projects/Cov/TranscriptionError/bin/mpileup_out.pl ${1}.PE.overlap.Mismatch.mpileup >  ${1}.PE.overlap.Mismatch.mpileup.out 
perl /Dell/Dell13/shankj/projects/Cov/TranscriptionError/bin/Match_fragment_number.pl ${1}.PE.overlap.TranscriptionError2 ${1}.PE.overlap.Match.mpileup  > Match.fragment.count
perl /Dell/Dell13/shankj/projects/Cov/TranscriptionError/bin/Lucas_ATCG_Content.pl ${1}.PE.overlap.Match.mpileup ${1}.PE.overlap.Mismatch.mpileup $3 > ${1}.content 
perl /Dell/Dell13/shankj/projects/Cov/TranscriptionError/bin/Read_Error.pl ${1}.PE.overlap.Mismatch.mpileup  > ${1}.read.mismatch
perl /Dell/Dell13/shankj/projects/Cov/TranscriptionError/bin/Fragment_Number.pl ${1}.PE.overlap.Mismatch.mpileup > PE.overlap.Mismatch.Fragment.count 
perl /Dell/Dell13/shankj/projects/Cov/TranscriptionError/bin/Fragment_Number.pl ${1}.PE.overlap.Match.mpileup > PE.overlap.Match.Fragment.count 
perl /Dell/Dell13/shankj/projects/Cov/TranscriptionError/bin/TranscriptionError_Overlap.pl ${1}.PE.overlap.Mismatch.mpileup.out > ${1}.PE.overlap.TranscriptionError
perl /Dell/Dell13/shankj/projects/Cov/TranscriptionError/bin/TranscriptionError2.pl ${1}.PE.overlap.TranscriptionError $2 > ${1}.PE.overlap.TranscriptionError2
perl /Dell/Dell13/shankj/projects/Cov/TranscriptionError/bin/TranscriptionError3.pl ${1}.PE.overlap.Match.mpileup ${1}.PE.overlap.TranscriptionError2 > ${1}.PE.overlap.TranscriptionError3
perl /Dell/Dell13/shankj/projects/Cov/TranscriptionError/bin/TranscriptionError_Overlap3_V2.pl PE.overlap.Mismatch.Fragment.count  PE.overlap.Match.Fragment.count ${1}.PE.overlap.TranscriptionError3 > ${1}.PE.overlap.V2.TranscriptionError3 
